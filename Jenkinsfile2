pipeline {
  agent any
  tools {
    maven "Maven"
  }
  stages {
      stage("Stage1") {
        steps {
		echo'Stage1'
		sh 'mvn test -Dtest=PPMSample2Test'
		}
	post{
		success{
		  echo'Test1-success'
		  junit"**/target/surefire-reports/*.xml"
		}
       	     } 
      }
      stage("Stage2") {
        steps {
                 echo'Stage2'
                 sh'mvn test -Dtest=PPMSample3Test'
              }
        post{
              success{
                echo'Test2-success'
                junit"**/target/surefire-reports/*.xml"
              }
           } 
       }
  }
}
