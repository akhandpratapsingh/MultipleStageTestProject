pipeline {
  agent any
  tools {
    maven "Maven"
  }
  stages {
      stage("Test1") {
        steps {
		echo'Test1'
		sh 'mvn test -Dtest="ppmtests.*"'
		}
	post{
		success{
		  echo'Test1-success'
		  junit"**/target/surefire-reports/*.xml"
		}
       	     } 
      }
      stage("Test2") {
        steps {
                 echo'Test2'
                 sh'mvn test -Dtest="unittests.*"'
              }
        post{
              success{
                echo'Test2-success'
                junit"**/target/surefire-reports/*.xml"
              }
           } 
       }
  }
}
